<view class="T-Service"><text class="t-content" selectable="{{true}}"><scroll-view scroll-y="true" scroll-into-view="{{scrollInto}}"><block wx:for="{{msg}}" wx:for-item="item" wx:for-index="index"><block wx:if="{{item.id!==0}}"><view class="{{['t-record',item.id!=userid?'t-other':'t-self']}}" id="{{'s'+item.id}}"><image class="t-avatar" src="{{item.avatar}}"></image><view class="t-msg">{{item.msg}}</view><view class="clear"></view></view></block><block wx:else><view class="t-system" id="{{'s'+item.id}}">{{''+item.msg+''}}</view></block></block></scroll-view></text><view class="t-bottom"><view class="t-input"><input type="text" placeholder="请输入消息内容" data-event-opts="{{[['confirm',[['sendMsg',['$event']]]],['input',[['__set_model',['','value','$event',[]]]]]]}}" value="{{value}}" bindconfirm="__e" bindinput="__e"/></view><view class="t-picture"><image src="/static/icon/chatgpt.png" mode></image></view><view data-event-opts="{{[['tap',[['sendMsg',['$event']]]]]}}" class="t-send" bindtap="__e">发送</view></view></view>